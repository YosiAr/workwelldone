# Editor configuration, see https://editorconfig.org
root = true
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 80

[*.ts]
insert_final_newline = true

[{package.json,.travis.yml,polyfills.ts}]
max_line_length = off

[*.md]
max_line_length = off
trim_trailing_whitespace = false
